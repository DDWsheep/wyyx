
@import "../../assets/stylus/mixins.styl"
.footer_guide  //footer
  top-border-1px(#e4e4e4)
  position fixed
  z-index 100
  left 0
  right 0
  bottom 0
  background-color #fff
  width 100%
  height 0.98rem
  display flex
  .guide_item
    display flex
    flex 1
    text-align center
    flex-direction column
    align-items center
    margin 0.1rem
    color #999999
    &.on
      color $red
    span
      font-size 0.24rem
      margin-top 0.04rem
      margin-bottom 0.04rem
      .iconfont
        font-size 0.44rem